      <!-- Render body_header -->
      <%= render "shared/body_header" %>

      <div class="panel-heading">
        <div class="cfy-name-artist text-center">
          <h1>Add song for %= @artist.name %</h1>
        </div>
      </div>


      <div class="panel-body">
        <div class="col-md-12 text-center">
          <% if @song.errors.count > 0 do %> -->
            <% @song.errors.full_messages.each do |msg| %> -->
              <p class="alert alert-danger" role="alert"><%= msg%></p>
            <% end %>
            <hr>
          <% end %>
        </div>
        <div class="col-md-12 text-center">
          <%= form_for @song, html: { multipart: true } do |f| %>
            <div class="form-group">
              <label>Title</label>
              <%= f.text_field :title, placeholder: "Song name", class: "form-control" %>
            </div>

            <!-- <div class="form-group">
              <label>Lyrics</label> -->
              <!-- < %= f.text_area :description, rows: 5, placeholder: "Say something about your place", class: "form-control" %> -->
            <!-- </div> -->

            <div class="actions">
              <%= f.submit "Save", class: "btn btn-success" %>
              <%= link_to "Cancel", @artist, class: "btn btn-default" %>
            </div>
          <% end %> -->
        </div>
      </div>

      <!-- Render body_footer -->
      <%= render "shared/body_footer" %>
